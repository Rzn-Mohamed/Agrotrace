# ==============================================================================
# INFRASTRUCTURE - KAFKA & ZOOKEEPER
# ==============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_EXTERNAL_PORT=9092
KAFKA_TOPIC=capteur_data
KAFKA_GROUP_ID=agrotrace-consumer-group

# ==============================================================================
# INFRASTRUCTURE - TIMESCALEDB (Primary Database)
# ==============================================================================
TIMESCALE_HOST=timescaledb
TIMESCALE_PORT=5432
TIMESCALE_DB=agrotrace_db
TIMESCALE_USER=agrotrace_admin
TIMESCALE_PASSWORD=CHANGE_ME_TIMESCALE_PASSWORD

# ==============================================================================
# INFRASTRUCTURE - POSTGIS (GIS Database)
# ==============================================================================
POSTGIS_HOST=postgis
POSTGIS_PORT=5432
POSTGIS_DB=agrotrace_sig
POSTGIS_USER=agrotrace_gis
POSTGIS_PASSWORD=CHANGE_ME_POSTGIS_PASSWORD

# ==============================================================================
